#include <iostream>
#include <vector>
#include <string>
using namespace std;

//all subsequences will be printed

void printt(int i, vector<int>&ds, int s, int sum, int n, vector<int>&arr)
{
    if(i == n)
    {
        if(s == sum)
        {
            // Print the subsequence
            for(auto it: ds)
            {
                cout << it << " ";
            }
            cout << endl;
        }
        return;
    }
    
    ds.push_back(arr[i]);
    s = s + arr[i];
    
    
    printt(i + 1, ds, s, sum, n, arr);
    s = s - arr[i];
    ds.pop_back();
    
    printt(i + 1, ds, s, sum, n, arr);
}

int main() {
    
    vector<int> ds;
    vector<int> arr = {1, 2, 1};
    int n = arr.size();
    int sum = 2;
    
    printt(0, ds, 0, sum, n, arr);
    
    cout << "finished";
    
    return 0;
}