//array is given and we have to find the element which occurs only once while all other elements occur twice.

class Solution {
public:
    int singleNumber(vector<int>& nums) {

        if(nums.size()==1)
        {
            return nums[0];
        }

        int ans=nums[0];
        int n = nums.size();

        for (int i = 1; i < n; i++) {
            ans = ans ^ nums[i];
        }

        return ans;
    }
};

