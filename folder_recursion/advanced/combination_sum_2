class Solution {
public:
    void fun(int index, int n, vector<int>& temp, vector<vector<int>>& ans,
             vector<int>& candidates, int target) {
        
        // Base case: Success
        if (target == 0) {
            ans.push_back(temp);
            return;
        }

        // Base case: Failure (ran out of numbers or went over target)
        if (target < 0 || index == n) {
            return;
        }

        // --- "Take" Call ---
        // Add the current element
        temp.push_back(candidates[index]);
        // Recurse: move to index+1 and subtract from target
        fun(index + 1, n, temp, ans, candidates, target - candidates[index]);
        // Backtrack
        temp.pop_back();

        // --- "Not Take" Call (with duplicate handling) ---
        // This is the key: if we don't take candidates[index],
        // skip *all* of its duplicates as well.
        while (index + 1 < n && candidates[index] == candidates[index + 1]) {
            index++;
        }
        
        // Recurse, starting from the next *unique* element
        fun(index + 1, n, temp, ans, candidates, target);
    }

    vector<vector<int>> combinationSum2(vector<int>& candidates, int target) {
        vector<vector<int>> ans;
        vector<int> temp;
        sort(candidates.begin(), candidates.end());
        
        int n = candidates.size();
        
        fun(0, n, temp, ans, candidates, target);
        
        return ans;
    }
};