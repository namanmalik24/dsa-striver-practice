class Solution {
public:
    void fun(int i, int n, vector<int>& temp, vector<vector<int>>& ans,
             vector<int>& candidates, int target) {

        if (i == n) {
            if (target == 0) {
                ans.push_back(temp);
            }
            return;
        }

        if (candidates[i] <= target) {

            temp.push_back(candidates[i]);

            fun(i, n, temp, ans, candidates, target - candidates[i]);

            temp.pop_back();
        }

        fun(i + 1, n, temp, ans, candidates, target);
    }

    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>> ans;

        vector<int> temp;

        int n = candidates.size();

        fun(0, n, temp, ans, candidates, target);

        return ans;
    }
};