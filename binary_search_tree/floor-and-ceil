#include <iostream>
#include <vector>
#include <string>

class Solution{ 
public:
    
    int floorfun(TreeNode *root, int key)
    {
        int floor = -1; 
        
        while(root)
        {
            if(root->data == key)
            {
                floor = root->data;
                return floor;
            }
            
            if(root->data < key)
            {
                floor = root->data;
                root = root->right;
            }
            else
            {
                root = root->left;
            }
        }
        return floor;
    }

    int ceilfun(TreeNode *root, int key)
    {
        int ceil = -1; 
        
        while(root)
        {
            if(root->data == key)
            {
                ceil = root->data;
                return ceil;
            }

            if(root->data < key)
            {
                root = root->right;
            }
            else
            {
                ceil = root->data;
                root = root->left;
            }
        }
        return ceil;
    }

    vector<int> floorCeilOfBST(TreeNode* root, int key){
        int f = floorfun(root, key);
        int c = ceilfun(root, key);
        
        return {f, c};
    }
};